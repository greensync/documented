#!/usr/bin/env ruby

require 'parser/current'
require 'unparser'

#require_relative '../lib/documented'

################################################################################
# Usage:
#   documented <file_path>
#
# Example:
#   documented spec/example_spec.rb
################################################################################

file_path = ARGV.first
imported = Parser::CurrentRuby.parse_file(file_path)
exported = Unparser.unparse(imported)

eval(exported)

# Documented.setup()
# `#{args}`
